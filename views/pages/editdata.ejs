<div class="container">
  <h1>Tambah Data</h1>
  <form method="POST" action="/todo/update">
    <div class="form-group">
      <label for="nama">Nama</label>
      <input
        type="text"
        class="form-control"
        id="nama"
        name="name"
        value="<%= m.name %>"
      />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        value="<%= m.email %>"
      />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        value="<%= m.password %>"
      />
    </div>
    <input type="hidden" name="id" value="<%= m._id %>" />

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
